<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">

  <title>{% block title %}{% endblock title %} â€” www</title>

  {# from https://github.com/franken-ui/template-html #}
  <style>
    :root {
      font-family: Inter, sans-serif;
      font-feature-settings: "liga" 1, "calt" 1;
      /* fix for Chrome */
    }

    @supports (font-variation-settings: normal) {
      :root {
        font-family: InterVariable, sans-serif;
      }
    }
  </style>

  <link
    rel="stylesheet"
    href="https://unpkg.com/franken-ui@2.0.0/dist/css/core.min.css"
  >
  <link
    rel="stylesheet"
    href="https://unpkg.com/franken-ui@2.0.0/dist/css/utilities.min.css"
  >
  <script
    type="module"
    src="https://unpkg.com/franken-ui@2.0.0/dist/js/core.iife.js"
  ></script>
  <script
    type="module"
    src="https://unpkg.com/franken-ui@2.0.0/dist/js/icon.iife.js"
  ></script>

  {# from https://franken-ui.dev/docs/2.0/theming #}
  <script>
    const htmlElement = document.documentElement;

    const __FRANKEN__ = JSON.parse(
      localStorage.getItem("__FRANKEN__") || "{}"
    );

    if (
      __FRANKEN__.mode === "dark" ||
      (!__FRANKEN__.mode &&
        window.matchMedia("(prefers-color-scheme: dark)").matches)
    ) {
      htmlElement.classList.add("dark");
    } else {
      htmlElement.classList.remove("dark");
    }

    htmlElement.classList.add(__FRANKEN__.theme || "uk-theme-zinc");
    htmlElement.classList.add(__FRANKEN__.radii || "uk-radii-md");
    htmlElement.classList.add(__FRANKEN__.shadows || "uk-shadows-sm");
    htmlElement.classList.add(__FRANKEN__.font || "uk-font-sm");
    htmlElement.classList.add(__FRANKEN__.chart || "uk-chart-default");
  </script>

  {% block head %}{% endblock head %}
</head>

<body class="bg-background text-foreground">
  <div class="uk-container mt-40">
    {% block content %}{% endblock content %}
  </div>
</body>

</html>
